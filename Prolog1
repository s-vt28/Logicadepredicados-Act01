% EJERCICIO 1 ARBOL GENEALOGICO FAMILIA SIMPSONS.
mujer(mona).
mujer(jacqueline).
mujer(marge).
mujer(patty).
mujer(selma).
mujer(lisa).
mujer(maggie).
mujer(ling).

hombre(clancy).
hombre(abraham).
hombre(homero).
hombre(herbert).
hombre(bart).

padre(abraham,herbert).
padre(abraham,homero).
madre(mona,homero).
padre(clancy,patty).
padre(clancy,marge).
padre(clancy,selma).
madre(jacqueline,patty).
madre(jacqueline,selma).
madre(jacqueline,marge).
padre(homero,bart).
padre(homero,lisa).
padre(homero,maggie).
madre(marge,bart).
madre(marge,lisa).
madre(marge,maggie).
madre(selma,ling).


abuelo_paterno(X,Y) :- padre(X,Z), padre(Z,Y).
abuelo_materno(X,Y) :- padre(X,Z), madre(Z,Y).
abuela_paterna(X,Y) :- madre(X,Z), padre(Z,Y).
abuela_materna(X,Y) :- madre(X,Z), madre(Z,Y).

hermano(X,Y) :- padre(Z,X), padre(Z,Y), madre(M,X), madre(M,Y), X\=Y.  % X\=Y  es para evitar que alguien sea su propio hermano.
hermana(X,Y) :- hermano(X,Y),mujer(X).








